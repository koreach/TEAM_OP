<script>
$('div.adventurestatus').each(function(i,e){
    var txt = '';
    for (var c = 0; c < e.childNodes.length; c++){
        if (e.childNodes[c].nodeType===3){
            txt += e.childNodes[c].data;
        }
    }
    if (txt.trim().length===0){
        $(e).hide();
				$(e).parent().hide();
    }
});

$(function() {
	var colors = ["green","yellow","red"];
	var index = 0;
	$('.adventurestatus').click(function() {
		if($(this).css("background-color") == "rgb(202, 25, 41)") {
			$(this).css("background-color", '#FECE24');
			$(this).children().attr('src', "images/wait.png");
		} else if($(this).css("background-color") == "rgb(254, 206, 36)") {
			$(this).css("background-color", 'green');
			$(this).children().attr('src', "images/yes.png");
		} else {
			$(this).css("background-color", '#CA1929');
			$(this).children().attr('src', "images/no.png");
		}
	});
})

$('.stopbutton').click(function(e) {
	var answer = confirm("Are you sure about deleting this adventure?")
	if (answer) {
		$.get("deleteFrom");
		var curr = $(this).parent().parent().parent().fadeOut();
		location.reload();
	}
	else {
	    //some code
	}

});

$("#message").ready(function(){
	if($('.adventurestatus').length) {
		$("#message").hide();
	}
});
