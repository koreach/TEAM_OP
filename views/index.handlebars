<!doctype html>
<html>
    <head>
        <title>ADVENTURE YOU</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no">
        <link rel="stylesheet" href="css/bootstrap.css">
        </link>
        <link rel="stylesheet" href="css/bootstrap-theme.css">
        </link>
        <link rel="stylesheet" href="css/style.css">
        </link>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="js/sweetalert.min.js"></script>
        <link rel="stylesheet" type="text/css" href="css/sweetalert.css">
    </head>
    <header>
        <div id="header">
            <div class="container">
                <div>
                    <div class="title">
                        <a href="/"><img class="adventureyou" src="images/ADVENTURE YOU.png"></a>
                    </div>
                    <div >
                        <nav>
                            <ul>
                                <div>
                                    <li><a href="friend"><img class="nav-icon" src="images/Profile Icon.png"></a></li>
                                    <li><a class="active" href="/"><img class="nav-icon" src="images/Feed Icon.png"></a></li>
                                    <li><a href="map"><img class="nav-icon" src="images/Map Icon.png"></a></li>
                                    <li><a href="bucket"><img class="nav-icon" src="images/Bucketlist Icon.png"></a></li>
                                    <li><button class="hamburger">&#9776;</button>
                                    </li>
                                </div>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="menu">
                    <ul>
                        <a href="https://a6-adventure-you.herokuapp.com/login">
                            <li>Log Out</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/friend">
                            <li>Create an Adventure</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/">
                            <li>Newsfeed</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/map">
                            <li>Hotspots</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/bucket">
                            <li>Bucket List</li>
                        </a>
                    </ul>
                </div>
            </div>
        </div>
    </header>
    <section id="index">
    <body>
        <div class="container">
            <div>
                {{#each feed_object}}
                <div class="feed-box col-md-6 col-sm-12 col-xs-12">
                    <div>
                    	<div class="monthDateContainer">
                    		<div class="month">{{month}} </div>
                    		<div class="date">{{date}} </div>
                    	</div>
                        <div class="feed-info">
                            {{#each joinedList.peopleJoined}}
                            <img class="prof-pic" src="{{face}}">
                            {{/each}}
                        </div>
                    </div>
                    <div class="img-layout">
                        <img class="picture" src="{{feedPicture}}">
                        <div class="col-md-6 description">
                        	<p>
                                <br>
                        		Come join us for camping, fishing, hiking, and outdoor bbq'ing!
                                <br>
                                <br>
                                Starting Location: Point Reyes
                                <br>
                                Ending Location: San Francisco
                                <br>
                                Theme: Outdoors
                        	</p>
                        	<div>
                        		<div onclick="comment()" class="add-button col-md-5 col-sm-5 col-xs-5"><img class="nav-icon" src="images/plusicon2.png"></div>
                        		<div class="col-md-2 col-sm-2 col-xs-2"></div>
                        		<div onclick="addToBucket()" class="bucket-button col-md-5 col-sm-5 col-xs-5"><img class="nav-icon" src="images/Bucketlist Icon.png"></div>
                        	</div>
                        </div>
                    </div>
                </div>
                {{/each}}


            </div>
        </div>
    </body>
    </section>

    <script src="js/bootstrap.js"></script>
    <script src="js/main.js"></script>
    <script type="text/javascript">

        $('.img-layout').click(function() {
        	$(this).children(".description").toggle(500);
        	$(this).children(".picture").css('opacity', function(i,o) {

        $('.bucket-button').click(function() {
            var a = $(this).parent().parent().parent().children().attr('src');
            var b = $(this).parent().parent().parent().parent().children().children().children('.month').text();
            var c = $(this).parent().parent().parent().parent().children().children().children('.date').text();
            alert(c);
            $.get("bucket", {title: b, date: b, theme: c, startingLoc: c, endingLoc: b, picture: a});
        });

        $('.img-layout').click(function() {
        	$(this).children(".description").toggle(500);
        	$(this).children(".picture").css('opacity', function(i,o) {
        		 return parseFloat(o).toFixed(1) === '0.3' ? 1 : 0.3;
        	});
        });


        function askToJoin() {
        	alert("Sent request to join");
        }

        function addToBucket() {
        	swal({
                title: "Added to bucket!",
               // text: "Here's my error message!",
                type: "success",
                showCancelButton: true,
                cancelButtonText: "Look at more Adventures",
                confirmButtonText: "Head to the bucket page",
                closeOnConfirm: false,
                closeOnCancel: false
            },

            function(isConfirm) {
                if(isConfirm) {
                    window.location.replace("https://a6-adventure-you.herokuapp.com/bucket");
                }else {
                    window.location.replace("https://a6-adventure-you.herokuapp.com/");
                }

            });

        }
