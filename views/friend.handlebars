<!--Actual start of the content-->
<body>
	<div class="container">
		<h1>Create Your Own Adventure</h1>
		<form id="addAdventure" role="form" method="get" action="/add">

					<div class="form-group">
			      <label for="title">Title</label>
			      <input type="text" class="form-control" id="title" placeholder="Title" name="title">
			    </div>

			    <div class="form-group">
			      <label for="Date">Date</label>
			      <input type="date" class="form-control" id="date" name="date">
			    </div>

					<div class="form-group">
						<label for="Theme">Theme</label>
						<input type="text" class="form-control" id="theme" placeholder="Theme" name="theme">
					</div>

					<div class="form-group">
						<label for="StartingLoc">Starting Location</label>
						<input type="text" class="form-control" id="startingloc" placeholder="Starting Location" name="startingloc">
					</div>

					<div class="form-group">
						<label for="EndingLoc">Ending Location</label>
						<input type="text" class="form-control" id="endingloc" placeholder="Ending Location" name="endingLoc">
					</div>
					<input onclick="addAdven()" type="submit" id="submitBtn" class="btn btn-default" value="Add the Adventure"></input>
			</form>
  </div>

	<form id="uploadForm" enctype="multipart/form-data" action="/bucket" method="post">
		<input type="file" name="userPhoto"/>
		<input type="submit" value="Upload Image" name="submit">
	</form>
</body>

