<!doctype html>
<html>
    <head>
        <title>ADVENTURE YOU</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=
            device-width, height=device-height, initial-scale=1.0, user-scalable=no">
        <link rel="stylesheet" href="css/bootstrap.css">
        </link>
        <link rel="stylesheet" href="css/bootstrap-theme.css">
        </link>
        <link rel="stylesheet" href="css/style.css">
        </link>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    </head>

    <!-- the menu bar-->
    <header>
        <div id="header">
            <div class="container">
                <div>
                    <div class="title">
                        <a href="/"><img class="adventureyou" src="images/ADVENTURE YOU.png"></a>
                    </div>
                    <div>
                        <nav>
                            <ul>
                                <div class="navbar-menu">
                                    <li><a href="friend"><img class="nav-icon" src="images/Profile Icon.png"></a></li>
                                    <li><a href="/"><img class="nav-icon" src="images/Feed Icon.png"></a></li>
                                    <li><a href="map"><img class="nav-icon" src="images/Map Icon.png"></a></li>
                                    <li><a class="active" href="bucket"><img class="nav-icon" src="images/Bucketlist Icon.png"></a></li>
                                    <li><button class="hamburger">&#9776;</button>
                                    </li>
                                </div>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="menu">
                    <ul>
                        <a href="https://a6-adventure-you.herokuapp.com/login">
                            <li>Log Out</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/friend">
                            <li>Create an Adventure</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/">
                            <li>Newsfeed</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/map">
                            <li>Hotspots</li>
                        </a>
                        <a href="https://a6-adventure-you.herokuapp.com/bucket">
                            <li>Bucket List</li>
                        </a>
                    </ul>
                </div>
            </div>
        </div>
    </header>

    <div id="popup1" class="overlay">
      <div class="popup">
        <h2>Here i am</h2>
        <a class="close" href="#">&times;</a>
        <div class="content">
          <img class="overlayimg" src="images/Camping Pic.png">
          Thank to pop me out of that button, but now i'm done so you can close this window.
        </div>
      </div>
    </div>

    <!-- The actual bucket list-->
    <section id="bucket">
        <body>
          <div class="container">
              {{#each bucketlist}}
              <div class="bucket-block">
                  <div class="col-md-6 col-sm-12 col-xs-12 right-element" style="">
                      <img class="left-pic" src="images/night.jpg">
                      <p class= "bucket_text">
                           {{title}}
                      </p>
                      <div class="showmore">
                         <a class="button" href="#popup1">Show More</a>
                      </div>
                    </div>
              </div>
              {{/each}}
          </div>
          <div class="new-adventure">
              <a href="adventure">
                  <h4>
                      Add new adventure<bold>+</bold>
                  </h4>
              </a>
          </div>
        </body>
    </section>
    <script src="js/main.js"></script>
    <script src="js/bootstrap.js"></script>

</script>
</html>
